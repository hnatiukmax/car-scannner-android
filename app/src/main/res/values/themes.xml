<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/main_background</item>

        <!-- Fonts -->
        <item name="fontFamily">@font/ff_avenir_next_rounded</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Attrs -->
        <item name="selectableItemBackgroundRounded">@drawable/selectable_item_background_rounded
        </item>
    </style>

    <!-- Theme for splash screen   -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/ic_splash_screen</item>
    </style>

    <!-- Text  -->
    <style name="AppTheme.Text" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AppTheme.Text.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.Description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_hint</item>
    </style>

    <!-- Widget -->
    <style name="AppTheme.Toolbar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="contentInsetStartWithNavigation">16dp</item>
        <item name="navigationIcon">@drawable/ic_back_black</item>
        <item name="android:titleTextColor">@color/text_black</item>
        <item name="titleTextStyle">@style/AppTheme.Toolbar.TitleTextStyle</item>
        <item name="titleTextAppearance">@style/AppTheme.Toolbar.TitleTextStyle.Light</item>
    </style>

    <style name="AppTheme.Toolbar.Light">
        <item name="navigationIcon">@drawable/ic_back_white</item>
        <item name="titleTextAppearance">@style/AppTheme.Toolbar.TitleTextStyle.Light</item>
    </style>

    <style name="AppTheme.Toolbar.TitleTextStyle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_toolbar</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="AppTheme.Toolbar.TitleTextStyle.Light">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:elevation">3dp</item>
    </style>

    <style name="AppTheme.Button.Filled">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/background_main_button</item>
        <item name="android:foreground">?attr/selectableItemBackgroundRounded</item>
    </style>

    <style name="AppTheme.Button.Outbox">
        <item name="android:textColor">@color/main_color</item>
        <item name="android:background">@drawable/background_stroke_button</item>
        <item name="android:foreground">@drawable/selectable_item_background_rounded_outbox</item>
    </style>

    <style name="AppTheme.TextButton">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="elevation">3dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:background">?attr/selectableItemBackgroundRounded</item>
        <item name="android:backgroundTint">#99365676</item>
    </style>

    <style name="AppTheme.TextButton.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.BackButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selectable_item_background_circle</item>
        <item name="android:padding">8dp</item>
        <item name="android:src">@drawable/ic_back_black</item>
        <item name="android:contentDescription">@null</item>
    </style>

    <style name="AppTheme.SocialAuthButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:foreground">?attr/selectableItemBackgroundRounded</item>
        <item name="android:background">@drawable/background_button_auth</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#FFA6A29E</item>
        <item name="android:foregroundTint">#99365676</item>
    </style>

    <style name="AppTheme.BottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_bottom_navigation</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:elevation">3dp</item>
        <item name="itemHorizontalTranslationEnabled">false</item>

        <item name="itemBackground">?attr/selectableItemBackgroundBorderless</item>
        <item name="itemIconTint">@color/bottom_navigation_item_selector</item>
        <item name="itemTextColor">@color/bottom_navigation_item_selector</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="AppTheme.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#4DC6C6C6</item>
    </style>

    <style name="AppTheme.ProgressLine" parent="Widget.MaterialProgressBar.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:indeterminate">true</item>
        <item name="mpb_indeterminateTint">@color/main_color</item>
        <item name="mpb_progressBackgroundTint">@color/main_color</item>
        <item name="mpb_progressStyle">horizontal</item>
        <item name="mpb_progressTint">@color/main_color</item>
    </style>

</resources>